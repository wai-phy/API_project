{
    "ConnectionStrings": {
        "DefaultConnection": "server=localhost;database=training;user=root;password=;Pooling=true;Allow User Variables=True; Convert Zero Datetime=True;ConnectionTimeout=1000;TreatTinyAsBoolean=false;"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "Microsoft.EntityFrameworkCore": "Warning",
                "Microsoft.AspNetCore": "Warning",
                "MyApi.Controllers.CustomerController": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [{
            "Name": "File",
            "Args": {
                "path": "/var/log/dotnet/todoapi-.log",
                "rollingInterval": "Day",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz} [{Level:u3}: {SourceContext}] {Message}{NewLine}{Exception}",
                "retainedFileCountLimit": 30
            }
        }]
    },
    "AllowedHosts": "*",
    "AllowedOrigins": "http://localhost:81,http://localhost:4200"
}